<section class="product brand" data-aos="fade-up">
  <div class="container">
    <div class="section-title">
      {% if section.settings.heading != blank %}
        <h5>{{ section.settings.heading }}</h5>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="view">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
    <div class="brand-section">
      {% for block in section.blocks %}
        <div class="product-wrapper">
          <div class="wrapper-img">
            <a href="{{ block.settings.brand_link}}">
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url }}" alt="img">
              {% endif %}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Brand",
  "class": "prod_brand-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Brand Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Brands",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "brand_label",
          "label": "Brand Name"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Add Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Brand",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
