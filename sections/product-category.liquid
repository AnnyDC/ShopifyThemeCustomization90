<section class="product-category">
  <div class="container">
    <div class="section-title">
      {% if section.settings.heading != blank %}
        <h5>
          {{ section.settings.heading }}
        </h5>
      {% endif %}
      {% if section.settings.all_collection_label != blank %}
        <a href="{{ section.settings.all_collection_link }}" class="view">
          {{ section.settings.all_collection_label }}
        </a>
      {% endif %}
    </div>
    <div class="category-section">
      {% for block in section.blocks %}
        <div class="product-wrapper" data-aos="fade-right" data-aos-duration="100">
          <div class="wrapper-img">
            <img src="{{ block.settings.image | img_url: ''}}" alt="dress">
          </div>
          <div class="wrapper-info">
            {% if block.settings.coll_label != blank %}
              <a href="{{ block.settings.collection_link }}" class="wrapper-details">{{ block.settings.coll_label }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
      {% comment %}
         <div class="product-wrapper" data-aos="fade-right" data-aos-duration="200">
          <div class="wrapper-img">
            <img src="./assets/images/homepage-one/category-img/bags.webp" alt="dress">
          </div>
          <div class="wrapper-info">
            <a href="product-sidebar.html" class="wrapper-details">Leather Bags</a>
          </div>
        </div>
        <div class="product-wrapper" data-aos="fade-right" data-aos-duration="300">
