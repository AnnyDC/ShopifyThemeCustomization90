{% schema %}
{
  "name": "Product Category",
  "class": "prod_category-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "all_collection_label",
      "label": "Collection label"
    },
    {
      "type": "url",
      "id": "all_collection_link",
      "label": "All Collection Link"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Product Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "coll_label",
          "label": "Fashion Name"
        },
        {
          "type": "url",
          "id": "collection_link",
          "label": "Add collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Category",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
